{
  "name": "Offline CloudIA App",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "offline_app_main_cleaned.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip install --no-cache-dir -r requirements.txt && echo 'âœ… Requirements installed'",
  "postAttachCommand": "streamlit run offline_app_main_cleaned.py --server.enableCORS false --server.enableXsrfProtection false",
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501]
}
